<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txf_title_recordatorio_item_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_semibold"
                android:textColor="@color/colorTextMain"
                android:textSize="20dp"
                android:text="Mi recordatorio" />

            <TextView
                android:id="@+id/txf_hora_recordatorio_item_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind"
                android:textSize="15dp"
                android:textColor="@color/colorTextSecond"
                android:text="Hora: 7:00 am" />

            <TextView
                android:id="@+id/txf_fecha_recordatorio_item_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind"
                android:textSize="15dp"
                android:textColor="@color/colorTextSecond"
                android:text="Fecha: 20/02/2019" />

            <TextView
                android:id="@+id/txf_comentario_recordatorio_item_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hind"
                android:textSize="15dp"
                android:textColor="@color/colorTextSecond"
                android:text="Comentario" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/colorBackLine"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>