<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a6f8d9b"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Forms.Frm_Add_Nota"
    tools:showIn="@layout/activity_frm__add__nota">

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--card_view:cardElevation="2dp"-->
        <!--android:layout_margin="10dp"-->
        <!--card_view:cardUseCompatPadding="true">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txf_title_add_nota_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/muli_semibold"
                android:textSize="20dp"
                android:ems="10"
                android:inputType="textCapSentences"
                android:textColor="@color/colorTextMain"
                android:hint="Titulo de nota" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="#d3c7c7c7"/>

            <EditText
                android:id="@+id/txf_nota_add_content_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:fontFamily="@font/hind"
                android:textSize="15dp"
                android:hint="Mi nota"
                android:textColor="@color/colorTextSecond"
                android:inputType="textMultiLine|textCapSentences" />
        </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->


</LinearLayout>