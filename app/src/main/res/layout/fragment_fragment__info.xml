<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context.="Fragment_Info">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animacion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="320dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"

        android:maxWidth="1000dp"
        android:maxHeight="1000dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="sinfondo.json"
        app:lottie_loop="true"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animacion4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="320dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"

        android:maxWidth="880dp"
        android:maxHeight="880dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="1801-fireworks.json"
        app:lottie_loop="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
             />



        <LinearLayout
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:gravity="center"
                android:textSize="40sp"
                android:textColor="@color/color_pimo_dark"
                android:fontFamily="@font/montserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pimo" />

            <TextView
                android:id="@+id/textView5"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/color_pimo_dark_light"
                android:fontFamily="@font/montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equipo de desarrollo" />

            <TextView
                android:id="@+id/textView2"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/TextGrayLight"
                android:fontFamily="@font/montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gloria Aguilar" />

            <TextView
                android:id="@+id/textView4"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/TextGrayLight"
                android:fontFamily="@font/montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ofelia López" />

            <TextView
                android:id="@+id/textView3"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/TextGrayLight"
                android:fontFamily="@font/montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Annei Arriola" />

            <TextView
                android:id="@+id/textView6"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/TextGrayLight"
                android:fontFamily="@font/montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jazmín Pool" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ofe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/w2" />

            <ImageView
                android:id="@+id/bae"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/w1" />
            <ImageView
                android:id="@+id/anbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/w3" />
            <ImageView
                android:id="@+id/jp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/w4" />


        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>


